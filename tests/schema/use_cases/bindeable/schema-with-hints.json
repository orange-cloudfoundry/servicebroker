{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for mysql service",
  "type": "object",
  "oneOf": [
    {
      "title": "service_instance request on cluster plan",
      "description": "not bindeable, returns no credentials",
      "properties": {
        "x-servicebroker-meta": {
          "allOf": [
            {
              "$ref": "#/definitions/x-servicebroker-meta"
            },
            {
              "$ref": "#/definitions/cluster-plan"
            }
          ]
        },
        "x-servicebroker-request": {
          "$ref": "#/definitions/empty"
        },
        "x-servicebroker-response": {
          "$ref": "#/definitions/empty"
        }
      },
      "additionalProperties": false,
      "required": [
        "x-servicebroker-meta",
        "x-servicebroker-request",
        "x-servicebroker-response"
      ]
    },
    {
      "title": "service_instance request on shared plan",
      "description": "bindeable, returns mysql credentials",
      "properties": {
        "x-servicebroker-meta": {
          "allOf": [
            {
              "$ref": "#/definitions/x-servicebroker-meta"
            },
            {
              "$ref": "#/definitions/shared-plan"
            }
          ]
        },
        "x-servicebroker-request": {
          "$ref": "#/definitions/empty"
        },
        "x-servicebroker-response": {
          "$ref": "#/definitions/mysql-credentials-format"
        }
      },
      "additionalProperties": false,
      "required": [
        "x-servicebroker-meta",
        "x-servicebroker-request",
        "x-servicebroker-response"
      ]
    }
  ],
  "definitions": {
    "x-servicebroker-meta": {
      "title": "standard service broker API meta-data",
      "description": "describes meta-data about the request",
      "type": "object",
      "properties": {
        "object": {
          "enum": [
            "service_instance",
            "service_binding"
          ]
        },
        "method": {
          "enum": [
            "provision",
            "bind",
            "unbind",
            "unprovision"
          ]
        },
        "service-id": {
          "type": "string"
        },
        "plan-id": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "service-id",
        "plan-id",
        "object",
        "method"
      ]
    },
    "cluster-plan": {
      "type": "object",
      "properties": {
        "plan-id": {
          "enum": [
            "cluster-plan-guid"
          ]
        }
      }
    },
    "shared-plan": {
      "type": "object",
      "properties": {
        "plan-id": {
          "enum": [
            "shared-plan-guid"
          ]
        }
      }
    },
    "x-servicebroker-request": {
      "type": "object",
      "additionalProperties": true
    },
    "empty": {
      "type": "object",
      "additionalProperties": false
    },
    "mysql-credentials-format": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "hostname": {
          "type": "string",
          "description": "FQDN or IP address"
        },
        "port": {
          "type": "string"
        },
        "username": {
          "type": "string",
          "x-servicebroker-fieldType": "secret"
        },
        "password": {
          "type": "string",
          "x-servicebroker-fieldType": "secret"
        },
        "uri": {
          "type": "string",
          "format": "uri",
          "x-servicebroker-fieldType": "secret"
        },
        "jdbcUrl": {
          "type": "string",
          "x-servicebroker-fieldType": "secret"
        }
      },
      "required": [
        "name",
        "hostname",
        "port",
        "username",
        "password",
        "uri",
        "jdbcUrl"
      ]
    }
  }
}