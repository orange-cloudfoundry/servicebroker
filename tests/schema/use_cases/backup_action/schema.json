{
  "id": "http://some.site.somewhere/entry-schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for mysql service",
  "type": "object",
  "properties": {
    "x-servicebroker-request": {
      "type": "object",
      "properties": {
        "backup-config": {
          "type": "object",
          "properties": {
            "eviction-policy": {
                "enum": ["fifo", "lilo", "none"]
            },
            "pgp-key": {"type": "string"},
            "destination-blob": {"type": "string"}
          }
        }
      },
      "required": [
        "billing-account"
      ]
    },
    "x-servicebroker-method": {
      "enum": ["backup", "restore"]
    },
    "additionalProperties": true,
    "required": [
      "x-servicebroker-request",
      "x-servicebroker-method"
    ]
  }
}